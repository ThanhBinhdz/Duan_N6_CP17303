                    android:id="@+id/tv_item_hoadon_trangthai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ssssssss"
                    android:textColor="#114B65"
                    android:textSize="15dp"
                    />
            </LinearLayout>

        </LinearLayout>


