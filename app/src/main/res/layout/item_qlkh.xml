<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    android:backgroundTint="@color/colorActionbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/item_hoadon_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_pro" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_hoadon_tenkh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Tên khách hàng:"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <!--            <TextView-->
            <!--                android:id="@+id/tv_item_hoadon_sp"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:padding="8dp"-->
            <!--                android:text="Tên sản phẩm:"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="14dp"-->
            <!--                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/tv_item_hoadon_sl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Số lượng:"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_hoadon_tongtien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Tổng tiền:"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_item_hoadon_ngaymua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Ngày mua:"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_item_hoadon_trangthai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Trạng thái:"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>





</androidx.cardview.widget.CardView>