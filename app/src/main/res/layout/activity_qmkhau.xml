<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qmkhau_activity"
    android:orientation="vertical"
    android:background="@drawable/bgrgif3"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qmk_btn_huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="10dp"
            android:src="@drawable/ic_backdky" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lấy Lại Mật Khẩu"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        />

    <EditText
        android:id="@+id/qmk_ed_ten"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/botron_ed"
        android:hint="Nhập Tên Đăng Nhập"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"

        android:gravity="center">

        <Button
            android:id="@+id/qmk_btn_llmk"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#55798A"
            android:text="Đổi Mật Khẩu"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>