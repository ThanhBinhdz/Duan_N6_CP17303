<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/brchim">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Voucher"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/themvoucher_ed_ma"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ed_botron_themsp"
        android:hint="Mã" />

    <EditText
        android:id="@+id/themvoucher_ed_phantram"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ed_botron_themsp"
        android:hint="Phần trăm"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="122dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/themvoucher_btn_them"
            android:layout_width="163dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:text="Thêm" />

        <Button
            android:id="@+id/themvoucher_btn_huy"
            android:layout_width="163dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:text="Hủy" />

    </LinearLayout>
</LinearLayout>